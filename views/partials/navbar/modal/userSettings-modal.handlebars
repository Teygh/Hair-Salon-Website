<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="settingsModalLabel">User Settings</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        {{!-- These are just basic options for both customers and admins --}}
        <form method='post' action="{{updateRoute}}" name="changeSettings-form">
            <div id="settings-error-msg">
                {{settingsMessage}}
            </div>
            
            <h7>Click on any information you wish to change</h7>
            <div class="form-group">
                <label>First Name</label>
                <div class="settingsParent">
                    <p class="childText">{{firstName}}</p>
                
                    <input type="text" class="form-control settingsChild"  placeholder="First Name" name="firstName" value="{{firstName}}" required>
                </div>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <div class="settingsParent">
                    <p class="childText">{{lastName}}</p>
                
                    <input type="text" class="form-control settingsChild"  placeholder="Last Name" name="lastName" value="{{lastName}}" required>
                </div>
            </div>
            <div class="form-group">
                <label>Email address</label>
                <div class="settingsParent">
                    <p class="childText">{{email}}</p>
                
                    <input type="email" class="form-control settingsChild"  placeholder="Enter email" name="email" value="{{email}}" required>
                </div>
                <small  class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <div class="settingsParent">
                    <p class="childText">{{phoneNumber}}</p>
                
                    <input type="tel" class="form-control settingsChild" placeholder="5555555555" name="phone" value="{{phoneNumber}}" required>
                </div>
            </div>
            {{!-- Needs logic to make sure verify password before allowing change of password --}}
            <div class="form-group">
                <label >Password</label>
                <input type="password" class="form-control"  placeholder="Please input your password to verify changes" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
    <div class="modal-footer"></div>
</div>