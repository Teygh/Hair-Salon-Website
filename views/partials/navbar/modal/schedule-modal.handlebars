       <form method="post" action='' name="schedule_form" class="scheduleForm">
           <div class="form-group" id="providerPick">
                <!-- Select Stylist Dropdown -->
                <label for="providerChoice">Select Provider</label>
                <select id="providerChoice1" class="form-control">
                    {{!-- {{#each provider_names}} --}}
                    <option selected> Select Provider</option>
                </select>
            </div>
            <div class="form-group">
                <label for="inputStart">Start Time</label>
                <input type="date" class="form-control" id="inputStart" aria-describedby="StartHelp" placeholder="Start Time">
            </div>
            <div class="form-group">
                <label for="inputEnd">End Time</label>
                <input type="date" class="form-control" id="inputEnd" placeholder="End Time">
            </div>
