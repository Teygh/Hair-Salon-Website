<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" class="settingsModal{{id}}Label">User Settings</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        {{!-- These are just basic options for both customers and admins --}}
        <form method='post' action="" name="changeSettings-form">
            {{!-- <div id="settings-error-msg">
                {{settingsMessage}}
            </div> --}}
            
            <h7>Click on any information you wish to change</h7>
            <div class="form-group">
                <label>First Name</label>
                <div>
                    <p>{{customer.firstName}}</p>
                </div>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <div>
                    <p>{{customer.lastName}}</p>
                </div>
            </div>
            <div class="form-group">
                <label>Email address</label>
                <div>
                    <p>{{customer.email}}</p>
                </div>
                <small  class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <div>
                    <p>{{customer.phone}}</p>
                </div>
            </div>
            <div class="form-group">
                <label >Notes</label>
                <textarea class="form-control" rows='5' col='50' name="notes">{{customer.notes}}</textarea>
            </div>
            <div class="form-group">
                <label >Photo Link</label>
                <input class="form-control"value="{{customer.photoLink}}"></input>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
    <div class="modal-footer"></div>
</div>