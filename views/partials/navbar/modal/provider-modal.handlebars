<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
<script type="text/javascript" src="/assets/js/provider.js"></script>

<div class="modal-content" id="newProviderModal">
    <div class="modal-header">
        <h5 class="modal-title" id="addProviderModalLabel">Add / Edit Provider</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div id="addProviderMsg" class="message"></div>
        <form name="provider_form" action="/register/provider" method="post">
            <div class="form-group">
                <label>First Name</label>
                <input type="text" class="form-control" id="inputFirstNameProvider" placeholder="First Name" name="firstName" required>
            </div>
            <div class="form-group">
                <label for="inputLastName">Last Name</label>
                <input type="text" class="form-control" id="inputLastNameProvider" placeholder="Last Name" name="lastName" required>
            </div>
            <div class="form-group">
                <label>Email address</label>
                <input type="email" class="form-control" placeholder="Enter email" name="email" id="inputEmailProvider" required>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input type="tel" class="form-control" placeholder="5555555555" name="phone" id="inputPhoneProvider" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" placeholder="Password" name="password" id="inputPasswordProvider" required>
            </div>
            <div class="form-group">
                <label for="inputtitle">Title</label>
                <input type="title" class="form-control" name="title" placeholder="Title" id="inputTitleProvider">
            </div>
            <div class="form-group">
                <label for="inputExperience">Experience</label>
                <input type="experience" name="experience" class="form-control" id="inputExperienceProvider" placeholder="
                .....Need Format">
            </div>
            <div class="form-group">
                <label for="inputStart">Notes</label>
                <input type="notes" name="notes" class="form-control" id="inputNotesProvider" aria-describedby="NotesHelp" placeholder="Notes">
            </div>
            <div class="form-group">
                <label for="inputPhotoLink">Photo Link</label>
                <input type="PhotoLink" name="photoLink" class="form-control" id="inputPhotoLinkProvider" placeholder="PhotoLink URL">
            </div>
            {{!-- <div class="form-group">
                <label for="InputService">Service</label>
                <input type="Service" class="form-control" id="inputService" placeholder="Service">
            </div> --}}
            <div class="form-check">
                
                <input type="checkbox" name = "admin" class="form-check-input" id="isAdminProvider">
                <label class="form-check-label" for="isAdminProvider">Admin</label>
            </div>
            <br>
            <button id="addProvider" type="button" class="btn btn-primary">Add Provider</button>
        </form>
    </div>
</div>
